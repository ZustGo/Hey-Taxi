<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.UserMapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tesseract.taxisharing.ui.activity.UserMapsActivity"
        tools:layout="@layout/abc_action_bar_title_item" />


    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/map"
        android:layout_alignRight="@+id/map"
        android:layout_alignTop="@+id/map"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_map_drawer"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu" />

        <EditText
            android:id="@+id/etLocationSearchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/iv_map_drawer"
            android:background="#ffffff"
            android:hint="Search location"
            android:padding="6dp"
            android:textColor="#000000"
            android:textSize="@dimen/et_text_size" />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_source_destination"
        android:layout_below="@+id/layout_search"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:id="@+id/tvFrom"
                    android:text="From: Dhaka"/>
                <android.support.v4.widget.Space
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvTo"
                    android:text="To: Khulna"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#c9c9c9"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnRequest"
                    android:text="Request" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ListView

        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/searchlocation"
        android:layout_alignRight="@+id/searchlocation"
        android:layout_below="@+id/layout_search"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btnLocationPin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/location_pin" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_response_from_driver"
        android:layout_alignParentBottom="true"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/layout_driver_request"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonet"
                    android:id="@+id/tvDriverName"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_user_maps_driver_image"
                    android:layout_width="60dp"
                    android:src="@drawable/man"
                    android:layout_height="60dp" />

                <android.support.v4.widget.Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_user_maps_car_image"
                    android:layout_width="60dp"
                    android:src="@drawable/taxi_cab"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maruti Suju"
                    android:textSize="14sp"
                    android:id="@+id/tvCarName"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_user_maps_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#c9c9c9"
                android:elevation="4dp"
                android:padding="5dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDriverContacat"
                    android:text="Contact" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/ib_user_maps_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib_user_maps_op2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ib_user_maps_op3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

