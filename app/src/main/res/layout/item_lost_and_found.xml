<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_laf_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4caf50"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lof_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@android:drawable/ic_menu_call"
                    android:drawablePadding="5dp"
                    android:text="01682324554"
                    android:textAlignment="center"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_lof_location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="#ffffff"
                        android:text="Dhanmondi"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_lof_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_access_alarm_black_24dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="#ffffff"
                        android:text="Time"
                        android:textColor="#ffffff" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_lof_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:text="FOUND"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:id="@+id/tv_lof_title"
            android:text="Lost my apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lof_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_lof_category"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:padding="10dp"
            android:text="If you already have files you can push them using command line instructions below."
            android:textAlignment="center" />

    </LinearLayout>
</android.support.v7.widget.CardView>
